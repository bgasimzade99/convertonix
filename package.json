{
  "name": "convertonix",
  "version": "1.0.0",
  "description": "Convertonix - Professional AI-Powered File Converter",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build && node -e \"const fs = require('fs'); if (fs.existsSync('dist/index.html')) fs.copyFileSync('dist/index.html', 'dist/404.html');\"",
    "preview": "vite preview",
    "server": "node server/index.js",
    "dev:full": "concurrently \"npm run dev\" \"npm run server\""
  },
  "dependencies": {
    "@tensorflow/tfjs": "^4.15.0",
    "axios": "^1.6.2",
    "browser-image-compression": "^2.0.2",
    "docx": "^8.5.0",
    "file-saver": "^2.0.5",
    "heic2any": "^0.0.4",
    "jspdf": "^2.5.1",
    "lucide-react": "^0.294.0",
    "mammoth": "^1.6.0",
    "pako": "^2.1.0",
    "pdfjs-dist": "^3.11.174",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-dropzone": "^14.2.3",
    "react-icons": "^4.12.0",
    "react-router-dom": "^7.9.3",
    "react-helmet-async": "^2.0.4",
    "tesseract.js": "^5.0.4",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
